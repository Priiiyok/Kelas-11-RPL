<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tampilkan Toast"
        android:onClick="btnToast"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tampilkan Alert Sederhana"
        android:onClick="btnAlert"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_alert_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tampilkan Alert dengan Tombol"
        android:onClick="btnAlertDialogButton"/>

</LinearLayout>